<simulation>

  <archetypes>
    <spec>
      <lib>agents</lib>
      <name>NullRegion</name>
    </spec>
    <spec>
        <lib>cycamore</lib>
        <name>DeployInst</name>
    </spec>
      <spec>
          <lib>agents</lib>
          <name>NullInst</name>
      </spec>
    <spec>
      <lib>cycamore</lib>
      <name>Source</name>
    </spec>
    <spec>
      <lib>cycamore</lib>
      <name>Reactor</name>
    </spec>
    <spec>
      <lib>cycamore</lib>
      <name>Sink</name>
    </spec>
    <spec>
      <lib>d3ploy.demand_driven_deployment_inst</lib>
      <name>DemandDrivenDeploymentInst</name>
    </spec>
  </archetypes>

  <control>
    <duration>100</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <facility>
    <config>
      <Source>
        <outcommod>fuel</outcommod>
        <outrecipe>fresh_uox</outrecipe>
        <throughput>3000</throughput>
      </Source>
    </config>
    <name>source</name>
  </facility>

  <facility>
    <config>
      <Reactor>
        <assem_size>1000</assem_size>
        <cycle_time>10</cycle_time>
        <fuel_incommods>
          <val>fuel</val>
        </fuel_incommods>
        <fuel_inrecipes>
          <val>fresh_uox</val>
        </fuel_inrecipes>
        <fuel_outcommods>
          <val>spent_fuel</val>
        </fuel_outcommods>
        <fuel_outrecipes>
          <val>spent_uox</val>
        </fuel_outrecipes>
        <n_assem_batch>1</n_assem_batch>
        <n_assem_core>3</n_assem_core>
        <power_cap>1000</power_cap>
        <refuel_time>1</refuel_time>
      </Reactor>
    </config>
    <name>reactor1</name>
  </facility>

  <facility>
    <config>
      <Reactor>
        <assem_size>1000</assem_size>
        <cycle_time>10</cycle_time>
        <fuel_incommods>
          <val>fuel</val>
        </fuel_incommods>
        <fuel_inrecipes>
          <val>fresh_uox</val>
        </fuel_inrecipes>
        <fuel_outcommods>
          <val>spent_fuel</val>
        </fuel_outcommods>
        <fuel_outrecipes>
          <val>spent_uox</val>
        </fuel_outrecipes>
        <n_assem_batch>1</n_assem_batch>
        <n_assem_core>3</n_assem_core>
        <power_cap>1000</power_cap>
        <refuel_time>1</refuel_time>
      </Reactor>
    </config>
    <name>reactor2</name>
  </facility>

  <facility>
    <config>
      <Reactor>
        <assem_size>1000</assem_size>
        <cycle_time>11</cycle_time>
        <fuel_incommods>
          <val>fuel</val>
        </fuel_incommods>
        <fuel_inrecipes>
          <val>fresh_uox</val>
        </fuel_inrecipes>
        <fuel_outcommods>
          <val>spent_fuel</val>
        </fuel_outcommods>
        <fuel_outrecipes>
          <val>spent_uox</val>
        </fuel_outrecipes>
        <n_assem_batch>1</n_assem_batch>
        <n_assem_core>3</n_assem_core>
        <power_cap>1000</power_cap>
        <refuel_time>1</refuel_time>
      </Reactor>
    </config>
    <name>reactor3</name>
  </facility>

<facility>
    <name>lwrsink</name>
    <config>
        <Sink>
            <in_commods>
                <val>spent_fuel</val>
            </in_commods>
            <max_inv_size>1e20</max_inv_size>
        </Sink>
    </config>
</facility>


  <recipe>
    <basis>mass</basis>
    <name>fresh_uox</name>
    <nuclide>
      <comp>0.711</comp>
      <id>U235</id>
    </nuclide>
    <nuclide>
      <comp>99.289</comp>
      <id>U238</id>
    </nuclide>
  </recipe>
  <recipe>
    <basis>mass</basis>
    <name>spent_uox</name>
    <nuclide>
      <comp>50</comp>
      <id>Kr85</id>
    </nuclide>
    <nuclide>
      <comp>50</comp>
      <id>Cs137</id>
    </nuclide>
  </recipe>

  <region>
    <config>
      <NullRegion>
      </NullRegion>
    </config>

    <institution>
        <config>
            <NullInst/>
        </config>
        <initialfacilitylist>

        <entry>
          <number>1</number>
          <prototype>lwrsink</prototype>
        </entry>
           
        </initialfacilitylist>
        <name>sink_source_facilities</name>
    </institution>

    <institution>
        <name>reactor_inst</name>
        <config>
            <DeployInst>
                <prototypes>
                    <val>reactor1</val>
                    <val>reactor1</val>
                    <val>reactor1</val>
                    <val>reactor1</val>
                    <val>reactor1</val>
                    <val>reactor1</val>
                    <val>reactor1</val>
                    <val>reactor1</val>
                    <val>reactor1</val>
                    <val>reactor1</val>
                </prototypes>
                <build_times>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                </build_times>
                <n_build>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                    <val>1</val>
                </n_build>
                <lifetimes>
                    <val>41</val>
                    <val>42</val>
                    <val>43</val>
                    <val>44</val>
                    <val>45</val>
                    <val>46</val>
                    <val>47</val>
                    <val>48</val>
                    <val>49</val>
                    <val>50</val>
                </lifetimes>
            </DeployInst>
        </config>
    </institution>
    <institution>
      <config>
        <DemandDrivenDeploymentInst>
          <calc_method>ma</calc_method>
          <facility_commod>
            <item>
              <facility>reactor2</facility>
              <commod>POWER</commod>
            </item>
            <item>
              <facility>source</facility>
              <commod>fuel</commod>
            </item>
          </facility_commod>
          <facility_capacity>
            <item>
              <facility>reactor2</facility>
              <capacity>1000</capacity>
            </item>
            <item>
              <facility>source</facility>
              <capacity>3000</capacity>
            </item>
          </facility_capacity>
          <facility_pref>
            <item>
            <facility>reactor2</facility>
            <pref>t-2</pref>
            </item>
          </facility_pref>
          <demand_eq>10000</demand_eq>
          <record>1</record>
          <steps>1</steps>
          <installed_cap>0</installed_cap>
          <buffer_type>
          <item>
            <commod>POWER</commod>
            <type>float</type>
          </item>
          </buffer_type>
          <supply_buffer>
            <item>
                <commod>POWER</commod>
                <buffer>5000</buffer>
            </item>
          </supply_buffer>
        </DemandDrivenDeploymentInst>
      </config>
      <name>source_inst</name>
    </institution>

    <name>SingleRegion</name>
  </region>
  
</simulation>